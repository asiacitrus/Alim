---
const numArray=[0,1,2,3,4,5,6];
---
{
    numArray.map((num)=>{
        const popupID="dropdown"+num;
        const ayahId="ayah"+num;
        const scriptURL="javascript:copyToClipBoard('"+ayahId+"')"
        return (
            <div id={popupID} class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
                <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
                    <li>
                        <a href={scriptURL} class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Copy to clipboard</a>
                    </li>
                    <li>
                        <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Share</a>
                    </li>
                </ul>
            </div>
        );
    })
}